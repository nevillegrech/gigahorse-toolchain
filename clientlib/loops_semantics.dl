.decl VariableToExpr(var: Variable, expr: Expr)
.output VariableToExpr
VariableToExpr(var, VarToExpr(var)):-
  Statement_Defines(_, var, _);
  Statement_Uses(_, var, _);
  FormalArgs(_, var, _).

.output LoopIterationCountExpr
LoopIterationCountExpr(loop, indVar, ["ADD", ValueToExpr("0x1"), ["DIV", boundVarE, ValueToExpr(@number_to_hex(constNum))]]):-
  InductionVariableUpperBoundVar(loop, indVar, boundVar, $WithEqual()),
  VariableToExpr(boundVar, boundVarE),
  InductionVariableStartsAtConst(loop, indVar, "0x0"),
  InductionVariableIncreasesByConst(loop, indVar, constNum).

LoopIterationCountExpr(loop, indVar, ["DIV", ["ADD", ValueToExpr(@number_to_hex(constNum - 1)), ["MUL", boundVarE, ValueToExpr(@number_to_hex(constNum))]], ValueToExpr(@number_to_hex(constNum))]):-
  InductionVariableUpperBoundVar(loop, indVar, boundVar, $WithoutEqual()),
  VariableToExpr(boundVar, boundVarE),
  InductionVariableStartsAtConst(loop, indVar, "0x0"),
  InductionVariableIncreasesByConst(loop, indVar, constNum),
  constNum != 1.

LoopIterationCountExpr(loop, indVar, boundVarE):-
  InductionVariableUpperBoundVar(loop, indVar, boundVar, $WithoutEqual()),
  VariableToExpr(boundVar, boundVarE),
  InductionVariableStartsAtConst(loop, indVar, "0x0"),
  InductionVariableIncreasesByConst(loop, indVar, 1).

LoopIterationCountExpr(loop, indVar, ["ADD", boundVarE, ValueToExpr("0x1")]):-
  InductionVariableUpperBoundVar(loop, indVar, boundVar, $WithEqual()),
  VariableToExpr(boundVar, boundVarE),
  InductionVariableStartsAtConst(loop, indVar, "0x0"),
  InductionVariableIncreasesByConst(loop, indVar, 1).

.decl LoopExprOrSubExpr(expr: Expr)
DEBUG_OUTPUT(LoopExprOrSubExpr)
LoopExprOrSubExpr(expr):-
  LoopIterationCountExpr(_, _, expr).

LoopExprOrSubExpr(left):-
  LoopExprOrSubExpr([op, left, right]),
  op=op, right=right.

LoopExprOrSubExpr(right):-
  LoopExprOrSubExpr([op, left, right]),
  op=op, left=left.

.decl Expr_StatementCount(expr: Expr, stmtNum: number)
DEBUG_OUTPUT(Expr_StatementCount)
Expr_StatementCount(expr, 0):-
  LoopExprOrSubExpr(expr),
  VariableToExpr(_, expr).

// Const, case
Expr_StatementCount([op, nil, nil], 1):-
  LoopExprOrSubExpr([op, nil, nil]),
  !VariableToExpr(_, [op, nil, nil]).

Expr_StatementCount([op, left, right], nleft + nright + 1):-
  LoopExprOrSubExpr([op, left, right]),
  Expr_StatementCount(left, nleft),
  Expr_StatementCount(right, nright).
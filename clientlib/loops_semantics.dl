// while (1) { if (boundVar <= i)break; ... }
// while (i < boundVar) {...}
InductionVariableUpperBoundVar(loop, [beforeLoopVar, inLoopVar], boundVar, $WithoutEqual()):-
  LoopExitCondPredicateTrue(condVar, loop, _),
